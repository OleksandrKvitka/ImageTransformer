@model ImageTransformer.Models.ImageModel

@{
    ViewData["Title"] = "Delete";
}
<div class="modal fade" id="deleteImage">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="madal-title" id="deleteImageLabel">Delete image</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete <strong>@Html.DisplayFor(model => model.Title)</strong>?</p>
                <p><img class="img-responsive" src="@("~/Images/" + Model.ImageName)" asp-append-version="true"/></p>
            </div>
            <div class="modal-footer">
                <form asp-action="Delete" enctype="multipart/form-data">
                    <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancel</button>
                    <input type="submit" value="Delete" class="btn btn-outline-danger" />
                </form>
            </div>
        </div>
    </div>
</div>
